<resources>

    <!-- base application theme. -->
    <style name="ChordsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_vivid</item>
        <item name="colorPrimaryDark">@color/blue_strong</item>
        <item name="colorAccent">@color/cyan_light</item>

        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
    </style>

    <style name="DrawerTextPrimary" parent="android:TextAppearance.Holo.Large">
        <item name="android:textColor">@color/gray_dark_very_transparent_light</item>
    </style>

    <style name="DrawerTextSecondary" parent="android:TextAppearance.Holo.Small">
        <item name="android:textColor">@color/gray_dark_very_transparent_light</item>
    </style>

    <style name="ChordsTheme.Popup" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/blue_vivid</item>
        <item name="android:popupBackground">@color/blue_vivid</item>
        <item name="android:textColor">@color/white_transparent_light</item>
    </style>

</resources>
